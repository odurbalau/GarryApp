html {
}

body {
  background-color: #EEE;
  background-repeat:no repeat;
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 13px;
  padding: 0px 20px;
  margin: 0px;
}

table{
  border-width: 1px;
  border-color: #780508;
  border-collapse: collapse;
  width: 90%;
  margin: 20px auto;
}
th {
  border-width: 1px;
  color:#ffffff;
  padding: 8px;
  border-style: solid;
  border-color: #780508;
  background-color: #940609;
}
td {
  border-width: 1px;
  padding: 8px;
  border-style: solid;
  border-color: #780508;
}

td input[type="text"]{
  border-width: 1px;
  border-style: solid;
  border-color: #780508;
  width: 100%;
  height: 30px;
}


h1{
	color:#940609;
	font-size:24px;
	margin-left: 40px;
}


h2{
	color:#940609;
	font-size:20px;
	margin-left: 40px;
}

h3{
	color:#940609;
	font-size:24px;
	margin-left: 40px;
}
